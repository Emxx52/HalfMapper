SOURCES=$(wildcard *.cpp)
OBJECTS=$(addprefix bin/,$(addsuffix .o,$(notdir $(basename $(SOURCES)))))
LDFLAGS= -lSDL2 -lGLEW -lGL -lGLU

G++FLAGS= -O2 -Wall -pedantic -Wextra

all: hlmapper

hlmapper: $(OBJECTS)
	$(CXX) $(OBJECTS) -o $@ $(LDFLAGS)

bin/%.o: %.cpp
	$(CXX) -c $< -o $@ $(G++FLAGS)
	
clean:
	rm bin/*.o
	rm hlmapper
	
run:
	hlmapper
	
.PHONY: clean run	